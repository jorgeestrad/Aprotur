@model AproturWeb.Models.UserViewModel
@{
    ViewData["Title"] = "EditUser";
}

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" asp-controller="Account" asp-action="EditUser" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
             <input type="hidden" asp-for="Email" />
              <input type="hidden" asp-for="TipoDocumentoId" />
             <div class="row">
                <div class="col-lg-5">
                    @Html.LabelFor(model => model.FirstName)
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-warning"></span>
                </div>

                <div class="col-lg-5">
                    @Html.LabelFor(model => model.LastName)
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-warning"></span>
                </div>
            </div>
            <div class="row">
                 <div class="col-lg-5">
                    @Html.LabelFor(model => model.Document)
                    <input asp-for="Document" class="form-control" />
                    <span asp-validation-for="Document" class="text-warning"></span>
                </div>

                <div class="col-lg-5">
                    @Html.LabelFor(model => model.Address)
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-warning"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="UserList" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>$(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
     });</script>

}


@model AproturWeb.Models.BusquedaViewModel

@{
    ViewData["Title"] = "Búsqueda Avanzada de documentos";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h4>Búsqueda Avanzada de documentos</h4>
        <hr />
        <form enctype="multipart/form-data" asp-controller="Search" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group row">
                 <label asp-for="Proyecto" class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-4">
                        <input asp-for="Proyecto" class="form-control" />
                        <span asp-validation-for="Proyecto" class="text-danger"></span>
                  </div>
                  <label asp-for="PaisId" class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-4">
                    <select asp-for="PaisId" asp-items="Model.Paises" id="PaisId" class="form-control"></select>
                    <span asp-validation-for="PaisId" class="text-warning"></span>
                  </div>
             </div>
          
             <div class="form-group row">
                <label asp-for="TipoDocumentoId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <select asp-for="TipoDocumentoId" asp-items="Model.TiposDocumentos" id="TipoDocumentoId" class="form-control"></select>
                    <span asp-validation-for="TipoDocumentoId" class="text-warning"></span>
                </div>
                 <label asp-for="FormatoDocumentoId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <select asp-for="FormatoDocumentoId" asp-items="Model.FormatosDocumentos" id="FormatoDocumentoId" class="form-control"></select>
                    <span asp-validation-for="FormatoDocumentoId" class="text-warning"></span>
                </div>
             </div>
             <div class="form-group row">
                 <label asp-for="TituloDocumento" class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-4">
                        <input asp-for="TituloDocumento" class="form-control" />
                        <span asp-validation-for="TituloDocumento" class="text-danger"></span>
                  </div>
                  <label asp-for="TemaCentral" class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-4">
                        <input asp-for="TemaCentral" class="form-control" />
                        <span asp-validation-for="TemaCentral" class="text-danger"></span>
                  </div>
             </div>
              <div class="form-group row">
                 <label asp-for="Autor" class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-4">
                        <input asp-for="Autor" class="form-control" />
                        <span asp-validation-for="Autor" class="text-danger"></span>
                  </div>
             </div>
             <div class="form-group">
                <input type="submit" asp-action="Search" value="Buscar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
             </div>
        </form>
    </div>
</div>




@model AproturWeb.Models.DocumentoViewModel

<div class="form-group row">
    <label asp-for="Nombre" class="col-sm-2 col-form-label"></label>
      <div class="col-sm-10">
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
      </div>
 </div>

    <div class="form-group row">
    <label asp-for="Descripcion" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="TipoDocumentoId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="TipoDocumentoId" asp-items="Model.TiposDocumentos" id="TipoDocumentoId" class="form-control"></select>
            <span asp-validation-for="TipoDocumentoId" class="text-warning"></span>
        </div>
     </div>
    <div class="form-group row">
        <label asp-for="Titulo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Ruta" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Ruta" class="form-control" readonly/>
            <span asp-validation-for="Ruta" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Archivo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Archivo" accept=".pdf,.mp3,.mp4,.jpg,.png" class="form-control custom-file-input">
                <label class="custom-file-label">Seleccionar el documento...</label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Autor" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Autor" class="form-control" />
            <span asp-validation-for="Autor" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FechaPublicacion" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FechaPublicacion" type="date" class="form-control" />
            <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Resumen" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Resumen" rows="10"  class="form-control"></textarea>
            <span asp-validation-for="Resumen" class="text-danger"></span>
        </div>
    </div>

@model AproturWeb.Models.GaleriaViewModel

<div class="form-group">
    <label asp-for="Descripcion" class="control-label"></label>
    <textarea asp-for="Descripcion" rows="8" class="form-control"></textarea>
    <span asp-validation-for="Descripcion" class="text-danger"></span>
</div>


<div class="form-group row">
    <label asp-for="Foto" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <div class="custom-file">
            <input asp-for="Foto" accept=".jpg,.png,.tif" class="form-control custom-file-input">
            <label class="custom-file-label">Seleccionar la Foto...</label>
            <span asp-validation-for="Foto" class="text-danger"></span>
        </div>
    </div>
</div>